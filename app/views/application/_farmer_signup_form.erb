<%= form_with model: farmer, local: true do |f| %>

  <p><%= display_first_error(farmer, :name) %></p>
  <%= f.text_field :name, autofocus: true, placeholder: 'Name' %><br>
  
  <p><%= display_first_error(farmer, :email) %></p>
  <%= f.text_field :email, autofocus: true, placeholder: 'Email' %><br>
  
  <p><%= display_first_error(farmer, :password) %></p>
  <%= f.password_field :password, autofocus: true, placeholder: 'Password' %><br>
  
  <p><%= display_first_error(farmer, :password_confirmation) %></p>
  <%= f.password_field :password_confirmation, autofocus: true, placeholder: 'Password Confirmation' %><br>

  <h4>Your Farm</h4>

  <p><%= display_first_error(farmer, :farm_name) %></p>
  <%= f.text_field :farm_name, autofocus: true, placeholder: 'Farm Name' %><br>

  <p><%= display_first_error(farmer, :address) %></p>
  <%= f.text_field :address, autofocus: true, placeholder: 'Full Address' %><br>

  <p><%= display_first_error(farmer, :description) %></p>
  <%= f.text_area :description, size: '60x12', autofocus: true, placeholder: 'Description' %><br>

  <p><%= display_first_error(farmer, :organic_certification) %></p>
  Is your farm have organic certification? <%= f.check_box :organic_certification %><br>


  <p><%= display_first_error(farmer, :terms_of_service) %></p>
  Please accept the terms of service <%= f.check_box :terms_of_service %><br>
  
  <br>
  <%= f.submit %>

<% end %>
