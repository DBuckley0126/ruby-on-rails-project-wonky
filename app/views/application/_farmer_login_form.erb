<%= form_with model: farmer, url: sessions_path, method: :post, local: true do |f| %>

  <p><%= display_first_error(farmer, :email) %></p>
  <%= f.text_field :email, autofocus: true, placeholder: 'Email' %><br>
  
  <p><%= display_first_error(farmer, :password) %></p>
  <%= f.password_field :password, autofocus: true, placeholder: 'Password' %><br>

  <br>
  <%= f.submit %>

<% end %>
