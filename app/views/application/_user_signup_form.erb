
<%= form_with model: user, local: true do |f| %>

  <p><%= display_first_error(user, :name) %></p>
  <%= f.text_field :name, autofocus: true, placeholder: 'Name' %><br>
  
  <p><%= display_first_error(user, :email) %></p>
  <%= f.text_field :email, autofocus: true, placeholder: 'Email' %><br>
  
  <p><%= display_first_error(user, :password) %></p>
  <%= f.password_field :password, autofocus: true, placeholder: 'Password' %><br>
  
  <p><%= display_first_error(user, :password_confirmation) %></p>
  <%= f.password_field :password_confirmation, autofocus: true, placeholder: 'Password Confirmation' %><br>

  <p><%= display_first_error(user, :address) %></p>
  <%= f.text_field :address, autofocus: true, placeholder: 'Full Address' %><br>
  
  <p><%= display_first_error(user, :terms_of_service) %></p>
  Please accept the terms of service <%= f.check_box :terms_of_service %><br>
  
  <br>
  <%= f.submit %>
<% end %>